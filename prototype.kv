#:kivy 1.0.9

<Button>:
    size: 60, 60
    size_hint: None, None
    
<CreateButton>:
    text: "Create"
    
<MoveButton>:
    text: "Move"
    
<Toolbar>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
<StateMachine>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<State>:
    size: 50, 50 
    size_hint: None, None
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            pos: self.x + 1, self.y + 1
            size: self.width - 2, self.height - 2