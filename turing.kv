#:kivy 1.0.9

<ToolbarButton>:
    halign: 'center'
    valign: 'middle'

<ControlLabel>:
    text_size: self.size
    color: [0, 0, 0, 1]
    halign: 'center'
    valign: 'middle'
    
<ReloadMachineLabel>:
    halign: 'right'
    valign: 'top'
    padding: (20, 20)
    
<TapeLabel>:
    halign: 'center'
    valign: 'middle'
    
<TextInput>:
    padding_y: ( self.height - self.line_height ) / 2
    
<StateLabel>:
    halign: 'center'
    valign: 'middle'
    color: [0, 0, 0, 1]
    
<RotateLabel>:
    halign: 'center'
    valign: 'top'
    color: [0, 0, 0, 1]
    
<StartScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
<Toolbar>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
<StateMachine>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size