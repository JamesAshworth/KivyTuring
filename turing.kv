#:kivy 1.0.9

<Button>:
    width: 60
    size_hint: None, 1
    font_size: 10
    halign: 'center'
    
<Toolbar>:
    size_hint: 1, None
    height: 60
    
<TapeCell>:
    font_size: 20
    padding: [5, ( self.height - self.line_height ) / 2]
    
<TapeLabel>:
    font_size: 20
    halign: 'center'
    valign: 'middle'
    
<TapeBar>:
    height: 100
    size_hint: 1, None
    
<StateLabel>:
    font_size: 20
    halign: 'center'
    valign: 'middle'
    color: [0, 0, 0, 1]
    
<CommonPopup>:
    size_hint: None, None
    size: 450, 220
    
<InfoBox>:
    size: 450, 150
    
<SpacedContent>:
    size_hint: 1, None
    height: 30
    
<RotateLabel>:
    font_size: 20
    halign: 'center'
    valign: 'top'
    color: [0, 0, 0, 1]
    
<TapeUnit>:
    width: 50
    size_hint: None, 1
    
<MenuScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
<Toolbar>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
<StateMachine>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size